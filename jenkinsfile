pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('sathishkat')
    }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Sathishkat/devops-pipeline.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t sathishkat/flask-app:latest .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                // Corrected login command
                bat 'echo %DOCKERHUB_CREDENTIALS_PSW% | docker login -u %DOCKERHUB_CREDENTIALS_USR% --password-stdin'
                bat 'docker push sathishkat/flask-app:latest'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                bat 'kubectl apply -f deployment.yaml'
            }
        }
    }
}
