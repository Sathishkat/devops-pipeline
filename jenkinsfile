pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
        DOCKER_IMAGE = 'sathishkat/devops-flask-app:latest'
    }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Sathishkat/devops-pipeline.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat '''
                    echo Building Docker image...
                    docker build -t %DOCKER_IMAGE% .
                '''
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    bat '''
                        echo Logging into DockerHub...
                        echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                        docker push %DOCKER_IMAGE%
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                bat '''
                    echo Deploying application to Minikube...
                    set KUBECONFIG=C:\\Users\\SATHISH.M\\.kube\\config
                    cd C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\devops-pipeline
                    kubectl apply -f deployment.yaml --validate=false
                    echo Checking pods...
                    kubectl get pods -o wide
                '''
            }
        }
    }
}
